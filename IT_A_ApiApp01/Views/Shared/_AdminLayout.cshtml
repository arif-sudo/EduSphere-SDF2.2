<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>EduSphere @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        /* Custom styles for sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0; /* Adjust as needed */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #343a40; /* Bootstrap dark background color */
            color: #fff; /* Text color */
            width: 200px; /* Sidebar width */
        }

        .sidebar-heading {
            padding: 10px 0;
            font-size: 24px;
        }

        .list-group-item {
            color: rgba(255, 255, 255, 0.5); /* Lighter text color */
            background-color: transparent; /* Transparent background */
            border: none; /* No border */
            font-size: 17px
        }

            .list-group-item:hover {
                background-color: rgba(255, 255, 255, 0.1); /* Hover background color */
            }

        .active {
            color: #fff; /* Active item color */
            background-color: rgba(255, 255, 255, 0.2); /* Active item background color */
        }

        .content {
            margin-left: 200px; /* Adjust for sidebar width */
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-heading text-center">EduSphere</div>
        <div class="list-group">
            @* Add sidebar links here *@

            <a href="@Url.Action("Index", "Home")" class="list-group-item text-center">Home</a>
            <a href="@Url.Action("Login", "Auth")" class="list-group-item text-center">Auth</a>
            <a href="@Url.Action("Index", "Blog")" class="list-group-item text-center">Blogs</a>
            <a href="@Url.Action("Index", "User")" class="list-group-item text-center">Users</a>
            <a href="@Url.Action("Index", "Book")" class="list-group-item text-center">Books</a>
        </div>
    </div>

    <div class="content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My EduSphere Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>