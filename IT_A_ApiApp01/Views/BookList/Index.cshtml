@model IEnumerable<IT_A_ApiApp01.Models.Books>

@{
    ViewBag.Title = "BookList";
}

<h2>Book List</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@item.Image" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title mt-2">@item.Title</h5>
                        <p class="card-text">@ShortenDescription(item.Description)</p>
                        <p class="card-text m-0"><small class="text-muted">Author: @item.Author</small></p>
                        <p class="card-text m-0 mb-2"><small class="text-muted">Price: @item.Price</small></p>
                        <!-- Details Button -->
                        <button type="button" class="btn btn-primary">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "text-white" })
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@functions {
    // Helper method to shorten description
    string ShortenDescription(string description)
    {
        if (description.Length > 115)
        {
            return description.Substring(0, 115) + "...";
        }
        return description;
    }
}